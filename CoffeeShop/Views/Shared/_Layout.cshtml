<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link rel="icon" href="~/Content/Images/Logo/coffee-logo.png">

    @Styles.Render("~/Content/custom.css")
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")



</head>

<body class="back-img" style="overflow hidden; padding: 0px" ;>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark static-top" style="margin-bottom: 20px;">
        <div class="container">
            <a class="navbar-brand" href=@Url.Action("Index", "Home")>
                <img src="~/Content/Images/Logo/coffee-logo.png" alt="" width="30" height="30">
            </a>
            <a class="navbar-brand" href=@Url.Action("Index", "Home")>
                Coffee Shop
            </a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarResponsive">
                <ul class="navbar-nav mx-auto">
                    <li class="nav-item">
                        @Html.ActionLink("Coffees", "Index", "Coffee", new { }, new { @class = "nav-link" })
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("Ingredients", "Index", "Ingredient", new { }, new { @class = "nav-link" })
                    </li>

                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </nav>
    
    <div class="container jumbotron transparent-card" style="border-radius: 20px;">
        @RenderBody()
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    @RenderSection("Styles", required: false)
</body>
</html>
