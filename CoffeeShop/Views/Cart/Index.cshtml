@model CoffeeShop.Models.Order.OrderModel
@using CoffeeShop.Models.Order
@using CoffeeShop.Helpers

@{ 
    ViewBag.Title = "Cart";
}

<section style="margin-top: 80px" id="cartSection">

    @{
        if (ViewBag.Valid == "True")
        {
            <h1 class="mx-0">Items in cart</h1>
            <table class="table table-hover table-striped mt-3" id="cartTable">
                <thead class="bg-dark text-white p-0 m-0">
                    <tr>
                        <th>
                            #
                        </th>
                        <th>
                            Cart item
                        </th>
                        <th>
                            Quantity in cart
                        </th>
                        <th>
                            Size of item
                        </th>
                        <th>
                            Price per item
                        </th>
                        <th>
                            Total per item
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        int j = 1;
                        foreach (var item in Model.OrderItems)
                        {
                            <tr>
                                <td>
                                    <span>@j</span>
                                </td>
                                <td>
                                    <span>@Html.DisplayFor(modelItem => item.Coffee.Name)</span>
                                </td>
                                <td>
                                    <span class="quantity">@item.Quantity</span>
                                </td>
                                <td>
                                    <span>@item.Coffee.Size</span>
                                </td>
                                <td>
                                    <span>@item.Coffee.TotalPrice</span>
                                </td>
                                <td>
                                    <span>
                                        @((item.Coffee.TotalPrice * item.Quantity))
                                    </span>
                                </td>
                                <td>
                                    <span class="removeFromCart deleteOrder" cart-id="@item.OrderItemId">
                                        <i class="fa fa-times delete btn btn-danger">Remove</i>
                                    </span>|
                                    <span class="deleteCoffee" cart-id="@item.Coffee.CoffeeId">
                                        <i class="fa fa-times delete btn btn-warning">Decrease coffee quantity</i>
                                    </span>
                                </td>
                            </tr>
                            j++;
                        }
                    }
                </tbody>
                <tfoot class="bg-dark text-white p-0 m-0 font-weight-bold">
                    <tr>
                        <td colspan="4">Total:</td>
                        <td>@Model.OrderItems.Select(x => x.Coffee.TotalPrice * x.Quantity).Sum() den.</td>
                        <td></td>
                        <td></td>
                    </tr>
                </tfoot>
            </table>
            <hr class="mt-5" />
            <div class="row pr-3">

                <div class="form-group container">
                    <label for="Address" class="font-weight-bold">Please enter delivery address</label><br /><br />
                    <div class="row px-3">
                        <input name="Addresss" id="address" class="form-control mr-0 w-75 " /><br />
                        <button id="makeOrderButton" class="btn bg-orange text-white font-weight-bold align-bottom ml-auto align-bottom" style="width: 8rem">
                            Order &#187;
                        </button>
                    </div>
                </div>
            </div>
        }
        else
        {
            <h1>Your cart is empty!</h1>
            <h3>Are you full of energy or just haven't chosen a coffee yet?</h3>
        }



    }
</section>

@section scripts{
    @{
        var data = (OrderModel)Session["cart"];
    }
    <script>
        $(document).ready(function () {
            var message = "";
            $("#makeOrderButton").on('click', function () {
                let address = $("#address").val();
                if (!address) {
                    $('#valid').removeClass('d-none')
                    return
                }
                $.ajax({
                    type: "POST",
                    url: "Orders/Create?Address=" + address,
                    data: @Html.Raw(Html.GetOrderRequestJson(data)),
                    success: function (response) {
                        message = JSON.parse(response.responseText).message
                    },
                    error: function (response) {
                        message = JSON.parse(response.responseText).message
                    },
                    complete: function () {
                        bootbox.alert(message, function () {
                            window.location.reload();
                            }
                        );
                    },
                    dataType: "application/json"
                })
            })
            var table = $("#cartTable");
            $(".removeFromCart").click(function () {
                var button = $(this);
                bootbox.confirm("Are you sure you want to remove this item from the cart?", function (result) {
                    if (result) {
                        $.ajax({
                            method: "POST",
                            url: "/Cart/RemoveOrderItemFromCart",
                            data: { id: button.attr("cart-id") },
                                success: function () {
                            },
                            complete: function () {
                                window.location.reload();
                            },
                            type: "application/json"
                        });
                    }
                })
            });
            $(".deleteCoffee").click(function () {
                var button = $(this);
                var row = button.parentsUntil("#cartTable tr").parent();
                var cell = $(row).find(" td:nth-child(3) span");
                var cell_data = cell.html();
                console.log(cell_data)
                bootbox.prompt({
                    title: "Внесете колку сакате да намалите",
                    inputType: 'number',
                    max: parseInt(cell_data),
                    min: 0,
                    value: 1,
                    callback: function (result) {
                        if (result) {
                            $.ajax({
                                method: "POST",
                                data: { "id": button.attr("cart-id"), "quantity": result },
                                url: "/Cart/RemoveCoffeeFromOrder",
                                error: function () {
                                    cell.html(parseInt(cell_data) - parseInt(result))
                                    bootbox.alert({
                                        message: "Successfully updated cart!",
                                        backdrop: true
                                    });
                                    location.reload();
                                },
                                dataType: 'json'
                            });
                        }
                    }
                });
            });
        })


    </script>
}