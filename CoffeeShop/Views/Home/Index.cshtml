@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron jumbotron-fluid mb-0">
    <div class="text-center text-white">
        <h1 class="display-4">Specialty coffee made by real baristas.</h1>
        <p class="lead">Our coffee meets the highest expectations</p>
        <hr class="my-4">
    </div>
</div>

<section id="menu" class="full-row bg-dark py-4 mb-5">
    <div class="container text-right">
        <div class="row">
            <div class="col-6 align-self-center">
                <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                    <ol class="carousel-indicators">
                        @{
                            var first = true;
                        }
                        @{
                            for (int i = 0; i < ViewBag.TopCoffee.Count; i++)
                            {
                                <li data-target="#carouselExampleIndicators" data-slide-to="@i" class=@(first?Html.Raw("active"):Html.Raw(""))></li>
                                first = false;
                            }
                        }
                    </ol>
                    <div class="carousel-inner">
                        @{ 
                            first = true;
                        }
                        @foreach (CoffeeShop.Models.CoffeeModel coffee in (IEnumerable<CoffeeShop.Models.CoffeeModel>)ViewBag.TopCoffee)
                            {
                            <div class="carousel-item @(first?Html.Raw("active"):Html.Raw(""))">
                                <img class="d-block w-100" src="@coffee.ImgUrl" alt=@coffee.Name>
                                <div class="carousel-caption d-none d-md-block mb-4" style="background-color:rgba(0, 0, 0, 0.7)">
                                    <h5 class="text-white">@coffee.Name</h5>
                                    <p class="text-white">Price: @coffee.TotalPrice</p>
                                </div>
                            </div>
                            first = false;
                        }
                    </div>
                  
                        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="sr-only">Previous</span>
                        </a>
                        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="sr-only">Next</span>
                        </a>
                </div>
            </div>
            <div class="col-6">
                <h1 class="text-uppercase text-orange">Our top sellers</h1>
                <hr class="red my-2 mr-0" />
                <p class="text-justify text-white">
                    Lorem ipsum dolor sit amet, consectetur adipiscing elit. Sed tempus tempus iaculis. Vestibulum ante ipsum primis in faucibus orci luctus et ultrices posuere cubilia curae; Pellentesque scelerisque sem id risus interdum, id molestie nisi bibendum.
                </p>
                <p class="text-justify text-white">
                    We're sure this info helped if you haven't made your mind and will lead to you having the perfect cup of coffee for the day!
                </p>
            </div>
        </div>
    </div>
    <div class="row text-center align-content-center">
        <div class="col-2 mx-auto">
            <a class="btn bg-orange text-white mt-4 font-weight-bold btn-block" href="@Url.Action("Index", "Coffee")">Menu &#187;</a>
        </div>
    </div>
</section>

