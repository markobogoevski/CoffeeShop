@section scripts{
    <script>
        $(document).ready(function () {
            if ($("#totalRat").text() != "0") {
                var totalRat = parseInt($("#totalRat").html());
                $(".ratingStar").each(function () {
                    if (parseInt($(this).attr("rating")) <= totalRat) {
                        $(this).removeClass("fa-star-o").addClass("fa-star");
                    }
                })
            }
            $("#contact").on('click', function () {
                var obj = {
                    Name: $("#Name").val(),
                    LastName: $("#LastName").val(),
                    Email: $("#Email").val(),
                    Message: $("#Message").val()
                };
                $("#Name").val("");
                $("#LastName").val("");
                $("#Email").val("");
                $("#Message").val("");
                $.ajax({
                    type: "POST",
                    url: "/Home/Contact",
                    data: obj,
                    success: function (res) {
                        bootbox.alert(JSON.parse(res.responseText).responseText)
                    },
                    error: function (res) {
                        bootbox.alert(JSON.parse(res.responseText).responseText)
                    },
                    dataType: "application/json"
                })
            })
        })
    </script>
}

