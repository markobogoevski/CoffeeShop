@model CoffeeShop.Models.IngredientModel
@using CoffeeShop.Enumerations

@{
    ViewBag.Title = "Details";
}

<h2>Ingredient details</h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Price)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Price)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.ImgUrl)
        </dt>

        <dd>
            <img src="@Model.ImgUrl" alt="@Model.Name" width="300" />
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Description)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>

    </dl>
</div>
<p>
    @if (ViewBag.Statistics != null)
    {
        @Html.ActionLink("Back to Statistics", "IngredientStatistics", routeValues: null, htmlAttributes: new { @class = "btn btn-info" })
    }
    else
    {
        @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-info" })
    }
    @{
        if (User.IsInRole(UserRoles.Admin) || User.IsInRole(UserRoles.Owner))
        {
            @Html.ActionLink("Edit", "Edit", new { id = Model.IngredientId }, new { @class = "btn btn-warning" })
        }
    }
</p>
