@model IEnumerable<CoffeeShop.Models.IngredientModel>
@using CoffeeShop.Enumerations

@{
    ViewBag.Title = "Index";
}
<div class="container">
    <h2 class="text-center mt-3">Ingredients</h2>
    <div class="hr"><hr /></div>
    <div hidden data-ingredient-count="@Model.Count()" id="div-count"></div>

    <div class="container align-btns text-center">
        @{ if (User.IsInRole(UserRoles.Admin) || User.IsInRole(UserRoles.Owner))
            {
                @Html.ActionLink("‎", "Create", null, new { @class = "fa fa-plus fa-3x  mr-5 text-success" })
                if (Model.Count() != 0)
                {
                    @Html.ActionLink("‎", "IngredientStatistics", null, new { @class = "fa fa-bar-chart fa-3x mr-5 text-dark" })

                }
            }
        }
        @{
            if (Model.Count() != 0)
            {
                <a class="fa fa-image fa-3x mr-5 text-info" id="toggle-img"></a>

            }
        }

    </div>
    @{
        if (User.IsInRole(UserRoles.Admin) || User.IsInRole(UserRoles.Owner) || Model.Count() != 0)
        {
            <div class="hr"><hr /></div>
        }
    }
    <table class="table table-hover table-striped" id="table1">
        <thead class="bg-dark text-orange">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Price)
                </th>
                <th class="img-field hidden-img no-sort">
                    @Html.DisplayNameFor(model => model.ImgUrl)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                <th class="no-sort">
                    Actions
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Price)
                    </td>
                    <td class="img-field hidden-img">
                        <a href="/Coffee/Details/@item.IngredientId">
                            <img alt="@item.Name" src="@Url.Content(item.ImgUrl)" />
                        </a>
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        @{
                            if (User.IsInRole(UserRoles.Admin) || User.IsInRole(UserRoles.Owner))
                            {
                                @Html.ActionLink("‎", "Edit", new { id = item.IngredientId }, new { @class = "fa fa-edit fa-2x text-warning" })
                                <a data-coffee-id="@item.IngredientId" class="fa fa-remove js-delete fa-2x text-danger"></a>
                            }
                        }
                        @Html.ActionLink("‎", "Details", new { id = item.IngredientId }, new { @class = "fa fa-info-circle fa-2x text-success" })
                </tr>

            }
        </tbody>

    </table>
    </div>
    @section scripts{
        <script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
        <script type="text/javascript">
            $(document).ready(function () {
                var table = $("#table1").DataTable();
                $('#toggle-img').on("click", function () {
                    $('.hidden-img').toggle('slow');
                });

                $(".js-delete").click(function () {
                    var button = $(this);
                    bootbox.confirm("Дали сигурна сакате да ја избришете состојката?", function (result) {
                        if (result) {
                            $.ajax({
                                method: "POST",
                                url: "/Ingredient/Delete/" + button.attr("data-ingredient-id"),
                                success: function () {
                                    table.row(button.parents("tr")).remove().draw();
                                    var div = $("#div-count");
                                    var value = div.attr("data-ingredient-count");
                                    var newValue = parseInt(value) - 1;
                                    div.attr("data-ingredient-count", newValue)
                                    if (parseInt(div.attr("data-ingredient-count")) == 0) {
                                        location.reload();
                                    }
                                },
                            });
                        }
                    })
                });
            });
        </script>
    }
