@model CoffeeShop.Models.CoffeeModel
@using CoffeeShop.Models
@{
    ViewBag.Title = "Coffee Details";
}
<br />

<div style="margin:auto; width:50%; border:3px solid gray; padding:10px" class="bg-primary card text-center" style="width: 18rem;">
    @ViewBag.Title<br /><br />
    <img class="card-img-top" src="@Model.ImgUrl" alt="Coffee" width="100%">
    <div class="card-body"><br />
        <h5 class="card-title">Ingredients: </h5>
        <p class="card-text">
            @{
                foreach (IngredientModel ingredient in (List<IngredientModel>)ViewBag.Ingredients)
                {
                    if (Model.Ingredients.Any(x => x.IngredientId.ToString() == ingredient.IngredientId.ToString()))
                    {
                        <strong>@ingredient.Name, Price: @ingredient.Price </strong>
                        <br />
                    }
                }
            }<br />
        </p>
    </div>
    <ul class="list-group list-group-flush">
        <li class="list-group-item bg-danger">Name: @Model.Name</li>
        <li class="list-group-item bg-danger">Price: @Model.TotalPrice denars.</li>
        <li class="list-group-item bg-danger">Size: @Model.Size</li>
        <li class="list-group-item bg-danger">Description: @Model.Description</li>
    </ul><br />
    <div class="card-body">
        @Html.ActionLink("Back to List", "Index", routeValues: null, htmlAttributes: new { @class = "card-link btn btn-info" })
        <a href="#" class="card-link btn btn-success">Order</a>
    </div>
</div>

@section Styles{
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-alpha.2/css/bootstrap.min.css" integrity="sha384-y3tfxAZXuh4HwSYylfB+J125MxIs6mR5FOHamPBG064zB+AFeWH94NdvaCBm8qnd" crossorigin="anonymous">
}