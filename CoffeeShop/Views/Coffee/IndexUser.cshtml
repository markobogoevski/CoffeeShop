@model IEnumerable<CoffeeShop.Models.CoffeeModel>

@{
    ViewBag.Title = "IndexUser";
}


<div class="card-deck d-flex justify-content-around">
        <div class="card text-white bg-dark mb-3 hoverable mt-3 col-sm-12 col-md-6" title="Add new" style="background: linear-gradient( rgba(0, 0, 0, 0.6), rgba(0, 0, 0, 0.4) )">
            <a href="@Url.Action("CreateCustom")" class="custom-card-link">
                <div class="card-body" style="min-height: 325px">
                    <h5 class="card-title">Create new</h5>
                    <hr class="red ml-0 mx-0" />
                    <div class="text-center d-flex align-items-center justify-content-center" style="min-height: 100px">
                        <i class="fa fa-plus fa-3x"></i>
                    </div>
                </div>
            </a>
        </div>

        @foreach (var item in Model)
        {
            <div class="card text-white bg-dark mb-3 hoverable item mt-3 col-3 col-sm-12 col-md-6" title="View details" style="background: linear-gradient( rgba(0, 0, 0, 0.4), rgba(0, 0, 0, 0.4) ), url(@item.ImgUrl); background-repeat:no-repeat; background-position: center; background-size:contain;">
                <a href="@Url.Action("Details", new { id = item.CoffeeId })" class="custom-card-link pt-0">
                    <div class="Search card-body" style="min-height: 250px">
                        <h5 class="card-title">@item.Name <span price-for="@item.CoffeeId" class="d-inline-block float-right">@item.TotalPrice ден.</span></h5>
                        <hr class="red ml-0 mt-1 mb-1 " />

                        <p class="card-text mt-2 font-italic" style="height: 90px;">
                            @string.Join(", ", item.Ingredients.Select(x => x.Name).ToList())
                        </p>

                    </div>
                </a>
                <div class="card-footer">
                    <div class="float-left">
                        <button type="submit" class="btn btn-light buttonsDown mr-1" name="edit" title="Edit" onclick="@("window.location.href='" + @Url.Action("Edit", "Coffee", new { id = @item.CoffeeId }) + "'")">
                            <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-pencil-square" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                                <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456l-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z" />
                                <path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5v11z" />
                            </svg>
                        </button>

                    </div>
                    <div class="float-right">

                        <button class="btn btn-light buttonsDown pt-2 pb-2" title="Add to Cart" coffee-name="@item.Name" coffee-id="@item.CoffeeId">
                            <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-cart3" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                                <path fill-rule="evenodd" d="M0 1.5A.5.5 0 0 1 .5 1H2a.5.5 0 0 1 .485.379L2.89 3H14.5a.5.5 0 0 1 .49.598l-1 5a.5.5 0 0 1-.465.401l-9.397.472L4.415 11H13a.5.5 0 0 1 0 1H4a.5.5 0 0 1-.491-.408L2.01 3.607 1.61 2H.5a.5.5 0 0 1-.5-.5zM3.102 4l.84 4.479 9.144-.459L13.89 4H3.102zM5 12a2 2 0 1 0 0 4 2 2 0 0 0 0-4zm7 0a2 2 0 1 0 0 4 2 2 0 0 0 0-4zm-7 1a1 1 0 1 0 0 2 1 1 0 0 0 0-2zm7 0a1 1 0 1 0 0 2 1 1 0 0 0 0-2z" />
                            </svg>
                        </button>
                    </div>



                </div>
            </div>
        }



</div>